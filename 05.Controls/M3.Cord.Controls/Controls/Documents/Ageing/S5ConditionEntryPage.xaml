<UserControl x:Class="M3.Cord.Controls.Documents.S5ConditionEntryPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:M3.Cord.Controls.Documents"
             mc:Ignorable="d"
             d:DesignHeight="1000"
             d:DesignWidth="1190">
    <UserControl.Resources>
        <!--  LOCAL STYLES  -->
        <Style TargetType="Border">
            <Setter Property="Padding" Value="5" />
            <Setter Property="BorderBrush" Value="DimGray" />
            <Setter Property="BorderThickness" Value="0.5" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>
        <Style TargetType="TextBox" BasedOn="{StaticResource CommonTextBox}">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>
        <Style TargetType="CheckBox" BasedOn="{StaticResource CommonCheckBox}">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>
    </UserControl.Resources>
    <ScrollViewer>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <!--#region COLUMN HEADERS-->
            <Border Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Background="Silver">
                <!--  CHECKING ITEM (MERGE COLUMN)  -->
                <TextBlock Text="Checking Item (รายการที่ตรวจสอบ)" />
            </Border>
            <Border Grid.Row="1"
                    Grid.Column="0"
                    Background="Silver">
                <!--  NO  -->
                <TextBlock Text="No." />
            </Border>
            <Border Grid.Row="1"
                    Grid.Column="1"
                    Background="Silver">
                <!--  MC Setting  -->
                <TextBlock Text="Machine Secting (ค่าที่ปรับตั้ง)" />
            </Border>
            <Border Grid.Row="0"
                    Grid.Column="2"
                    Grid.RowSpan="2"
                    Background="Silver">
                <!--  Class  -->
                <TextBlock Text="Class" RenderTransformOrigin="0.5,0.5">
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <RotateTransform Angle="90" />
                        </TransformGroup>
                    </TextBlock.RenderTransform>
                </TextBlock>
            </Border>
            <Border Grid.Row="0"
                    Grid.Column="3"
                    Grid.ColumnSpan="2"
                    Background="Silver">
                <!--  Class  -->
                <TextBlock Text="(Specification)" />
            </Border>
            <Border Grid.Row="0"
                    Grid.Column="5"
                    Grid.ColumnSpan="2"
                    Background="Silver">
                <!--  Class  -->
                <TextBlock Text="(Actual value)" />
            </Border>
            <Border Grid.Row="1"
                    Grid.Column="3"
                    Background="Silver">
                <!--  Class  -->
                <TextBlock Text="Set" />
            </Border>
            <Border Grid.Row="1"
                    Grid.Column="4"
                    Background="Silver">
                <!--  Class  -->
                <TextBlock Text="Actual Set" />
            </Border>

            <Border Grid.Row="1"
                    Grid.Column="5"
                    Background="Silver">
                <!--  Class  -->
                <TextBlock Text="Spec" />
            </Border>
            <Border Grid.Row="1"
                    Grid.Column="6"
                    Background="Silver">
                <!--  Class  -->
                <TextBlock Text="Actual" />
            </Border>

            <!--#endregion-->

            <!--#region NO 1-->

            <Border Grid.Row="2" Grid.Column="0">
                <TextBlock Text="1" HorizontalAlignment="Center" />
            </Border>
            <Border Grid.Row="2" Grid.Column="1">
                <TextBlock HorizontalAlignment="Left">
                    <Run Text="Main Supply Steam Pressure (kg/cm²)" />
                    <LineBreak />
                    <Run Text="แรงดันสตรีม (เมนต์วาวล์)(kg/cm²)" />
                </TextBlock>
            </Border>
            <Border Grid.Row="2" Grid.Column="2">
                <CheckBox Content="SC" IsChecked="{Binding MainSupplySteamPressureSC}" />
            </Border>
            <Border Grid.Row="2" Grid.Column="3">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBox Width="55"
                             Text="{Binding MainSupplySteamPressureSet}"
                             IsReadOnly="True" />
                    <TextBlock Text=" ± " />
                    <TextBox Width="55"
                             Text="{Binding MainSupplySteamPressureSetErr}"
                             IsReadOnly="True" />
                </StackPanel>
            </Border>

            <Border Grid.Row="2" Grid.Column="4">
                <TextBox Width="132" Text="{Binding MainSupplySteamPressureSetActual}" />
            </Border>

            <Border Grid.Row="2" Grid.Column="5">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBox Width="55"
                             Text="{Binding MainSupplySteamPressureSpec}"
                             IsReadOnly="True" />
                    <TextBlock Text=" ± " />
                    <TextBox Width="55"
                             Text="{Binding MainSupplySteamPressureSpecErr}"
                             IsReadOnly="True" />
                </StackPanel>
            </Border>

            <Border Grid.Row="2" Grid.Column="6">
                <TextBox Width="132" Text="{Binding MainSupplySteamPressureSpecActual}" />
            </Border>

            <!--#endregion-->

            <!--#region NO 2-->

            <Border Grid.Row="3" Grid.Column="0">
                <TextBlock Text="2" HorizontalAlignment="Center" />
            </Border>
            <Border Grid.Row="3" Grid.Column="1">
                <TextBlock HorizontalAlignment="Left">
                    <Run Text="Ageing Steam pressure (kg/cm²)" />
                    <LineBreak />
                    <Run Text="แรงดันสตรีม (ตัวเครื่อง)(kg/cm²)" />
                </TextBlock>
            </Border>
            <Border Grid.Row="3" Grid.Column="2">
                <CheckBox Content="SC" IsChecked="{Binding AgeingSteamPressureSC}" />
            </Border>
            <Border Grid.Row="3" Grid.Column="3">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBox Width="55"
                             Text="{Binding AgeingSteamPressureSet}"
                             IsReadOnly="True" />
                    <TextBlock Text=" ± " />
                    <TextBox Width="55"
                             Text="{Binding AgeingSteamPressureSetErr}"
                             IsReadOnly="True" />
                </StackPanel>
            </Border>

            <Border Grid.Row="3" Grid.Column="4">
                <TextBox Width="132" Text="{Binding AgeingSteamPressureSetActual}" />
            </Border>

            <Border Grid.Row="3" Grid.Column="5">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBox Width="55"
                             Text="{Binding AgeingSteamPressureSpec}"
                             IsReadOnly="True" />
                    <TextBlock Text=" ± " />
                    <TextBox Width="55"
                             Text="{Binding AgeingSteamPressureSpecErr}"
                             IsReadOnly="True" />
                </StackPanel>
            </Border>

            <Border Grid.Row="3" Grid.Column="6">
                <TextBox Width="132" Text="{Binding AgeingSteamPressureActual}" />
            </Border>

            <!--#endregion-->

            <!--#region NO 3-->

            <Border Grid.Row="4" Grid.Column="0">
                <TextBlock Text="3" HorizontalAlignment="Center" />
            </Border>
            <Border Grid.Row="4" Grid.Column="1">
                <TextBlock HorizontalAlignment="Left">
                    <Run Text="Setting Temperature (ตั้ง อุณหภูมิ)" />
                </TextBlock>
            </Border>
            <Border Grid.Row="4" Grid.Column="2">
                <CheckBox Content="SC" IsChecked="{Binding SettingTemperatureSC}" />
            </Border>
            <Border Grid.Row="4" Grid.Column="3">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBox Width="55"
                             Text="{Binding SettingTemperatureSet}"
                             IsReadOnly="True" />
                    <TextBlock Text=" ± " />
                    <TextBox Width="55"
                             Text="{Binding SettingTemperatureSetErr}"
                             IsReadOnly="True" />
                </StackPanel>
            </Border>

            <Border Grid.Row="4" Grid.Column="4">
                <TextBox Width="132" Text="{Binding SettingTemperatureSetActual}" />
            </Border>

            <Border Grid.Row="4" Grid.Column="5">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBox Width="55"
                             Text="{Binding SettingTemperatureSpec}"
                             IsReadOnly="True" />
                    <TextBlock Text=" ± " />
                    <TextBox Width="55"
                             Text="{Binding SettingTemperatureSpecErr}"
                             IsReadOnly="True" />
                </StackPanel>
            </Border>

            <Border Grid.Row="4" Grid.Column="6">
                <TextBox Width="132" Text="{Binding SettingTemperatureSpecActual}" />
            </Border>

            <!--#endregion-->

            <!--#region NO 4-->

            <Border Grid.Row="5" Grid.Column="0">
                <TextBlock Text="4" HorizontalAlignment="Center" />
            </Border>
            <Border Grid.Row="5" Grid.Column="1">
                <TextBlock HorizontalAlignment="Left">
                    <Run Text="Setting time (ตั้ง เวลา)" />
                </TextBlock>
            </Border>
            <Border Grid.Row="5" Grid.Column="2">
                <CheckBox Content="SC" IsChecked="{Binding SettingTimeSC}" />
            </Border>
            <Border Grid.Row="5" Grid.Column="3">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBox Width="55"
                             Text="{Binding SettingTimeSet}"
                             IsReadOnly="True" />
                    <TextBlock Text=" ± " />
                    <TextBox Width="55"
                             Text="{Binding SettingTimeSetErr}"
                             IsReadOnly="True" />
                </StackPanel>
            </Border>

            <Border Grid.Row="5" Grid.Column="4">
                <TextBox Width="132" Text="{Binding SettingTimeSetActual}" />
            </Border>

            <Border Grid.Row="5" Grid.Column="5">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBox Width="55"
                             Text="{Binding SettingTimeSpec}"
                             IsReadOnly="True" />
                    <TextBlock Text=" ± " />
                    <TextBox Width="55"
                             Text="{Binding SettingTimeSpecErr}"
                             IsReadOnly="True" />
                </StackPanel>
            </Border>

            <Border Grid.Row="5" Grid.Column="6">
                <TextBox Width="132" Text="{Binding SettingTimeSpecActual}" />
            </Border>

            <!--#endregion-->

            <!--#region NO 5-->

            <Border Grid.Row="6" Grid.Column="0">
                <TextBlock Text="5" HorizontalAlignment="Center" />
            </Border>
            <Border Grid.Row="6" Grid.Column="1">
                <TextBlock HorizontalAlignment="Left">
                    <Run Text="Lamp status system" />
                    <LineBreak />
                    <Run Text="สัญญานไฟเปิดเครื่อง" />
                </TextBlock>
            </Border>
            <Border Grid.Row="6" Grid.Column="2">
                <CheckBox Content="SC" IsChecked="{Binding LampStatusSystemSC}" />
            </Border>
            <Border Grid.Row="6" Grid.Column="3">
                <TextBlock HorizontalAlignment="Left">
                    <Run Text="เมื่อกดเปิดเครื่อง" />
                    <LineBreak />
                    <Run Text="ต้องมีสัญญานไฟโชว์" />
                </TextBlock>
            </Border>

            <Border Grid.Row="6" Grid.Column="4">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <StackPanel Orientation="Vertical" Width="60">
                        <CheckBox IsChecked="{Binding LampStatusSystemSetActual}" />
                        <TextBlock Text="YES" />
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Width="60">
                        <CheckBox IsChecked="{Binding LampStatusSystemSetActual}" />
                        <TextBlock Text="NO" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Grid.Row="6" Grid.Column="5">
                <TextBlock HorizontalAlignment="Left">
                    <Run Text="เมื่อกดเปิดเครื่อง" />
                    <LineBreak />
                    <Run Text="ต้องมีสัญญานไฟโชว์" />
                </TextBlock>
            </Border>

            <Border Grid.Row="6" Grid.Column="6">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <StackPanel Orientation="Vertical" Width="60">
                        <CheckBox IsChecked="{Binding LampStatusSystemSpecActual}" />
                        <TextBlock Text="YES" />
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Width="60">
                        <CheckBox IsChecked="{Binding LampStatusSystemSpecActual}" />
                        <TextBlock Text="NO" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!--#endregion-->

            <!--#region NO 6-->

            <Border Grid.Row="7" Grid.Column="0">
                <TextBlock Text="6" HorizontalAlignment="Center" />
            </Border>
            <Border Grid.Row="7" Grid.Column="1">
                <TextBlock HorizontalAlignment="Left">
                    <Run Text="Soud system Temperature" />
                    <LineBreak />
                    <Run Text="ระบบสัญญานเสียง เตือนอุณภูมิ" />
                </TextBlock>
            </Border>
            <Border Grid.Row="7" Grid.Column="2">
                <CheckBox Content="SC" IsChecked="{Binding SoudSystemTemperatureSC}" />
            </Border>
            <Border Grid.Row="7" Grid.Column="3">
                <TextBlock HorizontalAlignment="Left">
                    <Run Text="มีสัญญานเสียงเตือนอุณภูมิ" />
                </TextBlock>
            </Border>

            <Border Grid.Row="7" Grid.Column="4">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <StackPanel Orientation="Vertical" Width="60">
                        <CheckBox IsChecked="{Binding SoudSystemTemperatureSetActual}" />
                        <TextBlock Text="YES" />
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Width="60">
                        <CheckBox IsChecked="{Binding SoudSystemTemperatureSetActual}" />
                        <TextBlock Text="NO" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Grid.Row="7" Grid.Column="5">
                <TextBlock HorizontalAlignment="Left">
                    <Run Text="มีสัญญานเสียงเตือนอุณภูมิ" />
                </TextBlock>
            </Border>

            <Border Grid.Row="7" Grid.Column="6">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <StackPanel Orientation="Vertical" Width="60">
                        <CheckBox IsChecked="{Binding SoudSystemTemperatureSpecActual}" />
                        <TextBlock Text="YES" />
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Width="60">
                        <CheckBox IsChecked="{Binding SoudSystemTemperatureSpecActual}" />
                        <TextBlock Text="NO" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!--#endregion-->

            <!--#region NO 7-->

            <Border Grid.Row="8" Grid.Column="0">
                <TextBlock Text="7" HorizontalAlignment="Center" />
            </Border>
            <Border Grid.Row="8" Grid.Column="1">
                <TextBlock HorizontalAlignment="Left">
                    <Run Text="Yarn Type (เบอร์ด้าย)" />
                </TextBlock>
            </Border>
            <Border Grid.Row="8" Grid.Column="2">
                <CheckBox Content="SC" IsChecked="{Binding YarnTypeSC}" />
            </Border>
            <Border Grid.Row="8" Grid.Column="3">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBox Width="132"
                             Text="{Binding YarnTypeSet}"
                             IsReadOnly="True" />
                </StackPanel>
            </Border>

            <Border Grid.Row="8" Grid.Column="4">
                <TextBox Width="132" Text="{Binding YarnTypeSetActual}" />
            </Border>

            <Border Grid.Row="8" Grid.Column="5">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBox Width="132"
                             Text="{Binding YarnTypeSpec}"
                             IsReadOnly="True" />
                </StackPanel>
            </Border>

            <Border Grid.Row="8" Grid.Column="6">
                <TextBox Width="132" Text="{Binding YarnTypeSpecActual}" />
            </Border>

            <!--#endregion-->

            <!--#region NO 8-->

            <Border Grid.Row="9" Grid.Column="0">
                <TextBlock Text="8" HorizontalAlignment="Center" />
            </Border>
            <Border Grid.Row="9" Grid.Column="1">
                <TextBlock HorizontalAlignment="Left">
                    <Run Text="Cord Structure (โครงสร้างเชือก)" />
                </TextBlock>
            </Border>
            <Border Grid.Row="9" Grid.Column="2">
                <CheckBox Content="SC" IsChecked="{Binding CordStructureSC}" />
            </Border>
            <Border Grid.Row="9" Grid.Column="3">
                <TextBox Width="132"
                         Text="{Binding CordStructureSet}"
                         IsReadOnly="True" />
            </Border>

            <Border Grid.Row="9" Grid.Column="4">
                <TextBox Width="132" Text="{Binding CordStructureSetActual}" />
            </Border>

            <Border Grid.Row="9" Grid.Column="5">
                <TextBox Width="132"
                         Text="{Binding CordStructureSpec}"
                         IsReadOnly="True" />
            </Border>

            <Border Grid.Row="9" Grid.Column="6">
                <TextBox Width="132" Text="{Binding CordStructureSpecActual}" />
            </Border>

            <!--#endregion-->

            <!--#region NO 9-->

            <Border Grid.Row="10" Grid.Column="0">
                <TextBlock Text="9" HorizontalAlignment="Center" />
            </Border>
            <Border Grid.Row="10" Grid.Column="1">
                <TextBlock HorizontalAlignment="Left">
                    <Run Text="Twisting No.(จำนวนเกลียว)" />
                </TextBlock>
            </Border>
            <Border Grid.Row="10" Grid.Column="2">
                <CheckBox Content="SC" IsChecked="{Binding TwistingNoSC}" />
            </Border>
            <Border Grid.Row="10" Grid.Column="3">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBox Width="55"
                             Text="{Binding TwistingNoSet}"
                             IsReadOnly="True" />
                    <TextBlock Text=" ± " />
                    <TextBox Width="55"
                             Text="{Binding TwistingNoSetErr}"
                             IsReadOnly="True" />
                    <TextBlock Text=" (S) T/M" />
                </StackPanel>
            </Border>

            <Border Grid.Row="10" Grid.Column="4">
                <TextBox Width="132" Text="{Binding TwistingNoSetActual}" />
            </Border>

            <Border Grid.Row="10" Grid.Column="5">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBox Width="55"
                             Text="{Binding TwistingNoSpec}"
                             IsReadOnly="True" />
                    <TextBlock Text=" ± " />
                    <TextBox Width="55"
                             Text="{Binding TwistingNoSpecErr}"
                             IsReadOnly="True" />
                    <TextBlock Text=" (S) T/M" />
                </StackPanel>
            </Border>

            <Border Grid.Row="10" Grid.Column="6">
                <TextBox Width="132" Text="{Binding TwistingNoSpecActual}" />
            </Border>

            <!--#endregion-->

            <!--#region NO 10-->

            <Border Grid.Row="11" Grid.Column="0">
                <TextBlock Text="10" HorizontalAlignment="Center" />
            </Border>
            <Border Grid.Row="11" Grid.Column="1">
                <TextBlock HorizontalAlignment="Left">
                    <Run Text="Unit weight (น้ำหนัก กก./ลูก)" />
                </TextBlock>
            </Border>
            <Border Grid.Row="11" Grid.Column="2">
                <CheckBox Content="SC" IsChecked="{Binding UnitWeightSC}" />
            </Border>
            <Border Grid.Row="11" Grid.Column="3">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBox Width="55"
                             Text="{Binding UnitWeightSet}"
                             IsReadOnly="True" />
                    <TextBlock Text=" ± " />
                    <TextBox Width="55"
                             Text="{Binding UnitWeightSetErr}"
                             IsReadOnly="True" />
                    <TextBlock Text=" Kg/CH" />
                </StackPanel>
            </Border>

            <Border Grid.Row="11" Grid.Column="4">
                <TextBox Width="132" Text="{Binding UnitWeightSetActual}" />
            </Border>

            <Border Grid.Row="11" Grid.Column="5">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBox Width="55"
                             Text="{Binding UnitWeightSpec}"
                             IsReadOnly="True" />
                    <TextBlock Text=" ± " />
                    <TextBox Width="55"
                             Text="{Binding UnitWeightSpecErr}"
                             IsReadOnly="True" />
                    <TextBlock Text=" Kg/CH" />
                </StackPanel>
            </Border>

            <Border Grid.Row="11" Grid.Column="6">
                <TextBox Width="132" Text="{Binding UnitWeightSpecActual}" />
            </Border>

            <!--#endregion-->

            <!--#region NO 11-->

            <Border Grid.Row="12" Grid.Column="0">
                <TextBlock Text="11" HorizontalAlignment="Center" />
            </Border>
            <Border Grid.Row="12" Grid.Column="1">
                <TextBlock HorizontalAlignment="Left">
                    <Run Text="Starting time (เวลาเริ่มเปิด)" />
                </TextBlock>
            </Border>
            <Border Grid.Row="12" Grid.Column="2">
                <CheckBox Content="SC" IsChecked="{Binding StartingTimeSC}" />
            </Border>
            <Border Grid.Row="12"
                    Grid.Column="3"
                    Grid.ColumnSpan="2">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock HorizontalAlignment="Left">
                        <Run Text="Date " />
                        <LineBreak />
                        <Run Text="วันที่: " />
                    </TextBlock>
                    <Line Width="45" />
                    <TextBox Width="200"
                             Text="{Binding StartingTimeStartAgeingTime, StringFormat='{}{0:dd/MM/yyyy}'}"
                             VerticalContentAlignment="Center"
                             IsReadOnly="True"
                             FontSize="16"
                             Height="30" />
                </StackPanel>
            </Border>

            <Border Grid.Row="12"
                    Grid.Column="5"
                    Grid.ColumnSpan="2">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock HorizontalAlignment="Left">
                        <Run Text="Setting Time " />
                        <LineBreak />
                        <Run Text="เวลาเริ้มเปิด: " />
                    </TextBlock>
                    <Line Width="5" />
                    <TextBox Width="200"
                             Text="{Binding StartingTimeStartAgeingTime, StringFormat='{}{0:HH:mm:ss}'}"
                             VerticalContentAlignment="Center"
                             IsReadOnly="True"
                             FontSize="16"
                             Height="30" />
                </StackPanel>
            </Border>

            <!--#endregion-->

            <!--#region NO 12-->

            <Border Grid.Row="13" Grid.Column="0">
                <TextBlock Text="12" HorizontalAlignment="Center" />
            </Border>
            <Border Grid.Row="13" Grid.Column="1">
                <TextBlock HorizontalAlignment="Left">
                    <Run Text="Finish time (เวลาอบเสร็จ)" />
                </TextBlock>
            </Border>
            <Border Grid.Row="13" Grid.Column="2">
                <CheckBox Content="SC" IsChecked="{Binding FinishTimeSC}" />
            </Border>
            <Border Grid.Row="13"
                    Grid.Column="3"
                    Grid.ColumnSpan="2">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock HorizontalAlignment="Left">
                        <Run Text="Date วันที่: " />
                    </TextBlock>
                    <Line Width="5" />
                    <TextBox Width="200"
                             Text="{Binding FinishTime, StringFormat='{}{0:dd/MM/yyyy}'}"
                             VerticalContentAlignment="Center"
                             IsReadOnly="True"
                             FontSize="16"
                             Height="30" />
                </StackPanel>
            </Border>

            <Border Grid.Row="13"
                    Grid.Column="5"
                    Grid.ColumnSpan="2">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock HorizontalAlignment="Left">
                        <Run Text="Time เวลา: " />
                    </TextBlock>
                    <Line Width="26" />
                    <TextBox Width="200"
                             Text="{Binding FinishTime, StringFormat='{}{0:HH:mm:ss}'}"
                             VerticalContentAlignment="Center"
                             IsReadOnly="True"
                             FontSize="16"
                             Height="30" />
                </StackPanel>
            </Border>

            <!--#endregion-->

            <!--#region NO 13-->

            <Border Grid.Row="14" Grid.Column="0">
                <TextBlock Text="13" HorizontalAlignment="Center" />
            </Border>
            <Border Grid.Row="14" Grid.Column="1">
                <TextBlock HorizontalAlignment="Left">
                    <Run Text="Out time (เวลาเอาด้าย ออกจากตู้อบ)" />
                </TextBlock>
            </Border>
            <Border Grid.Row="14" Grid.Column="2">
                <CheckBox Content="SC" IsChecked="{Binding OutTimeSC}" />
            </Border>
            <Border Grid.Row="14"
                    Grid.Column="3"
                    Grid.ColumnSpan="2">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock HorizontalAlignment="Left">
                        <Run Text="Date วันที่: " />
                    </TextBlock>
                    <Line Width="5" />
                    <TextBox Width="200"
                             Text="{Binding OutTime, StringFormat='{}{0:dd/MM/yyyy}'}"
                             VerticalContentAlignment="Center"
                             IsReadOnly="True"
                             FontSize="16"
