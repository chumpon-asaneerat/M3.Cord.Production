                            <TextBlock Text=" ± " />
                        </StackPanel>
                        <StackPanel Orientation="Vertical">
                            <TextBox Width="70"
                                     Text="{Binding WindQuantityErr, StringFormat='{}{0:#,##0.##}'}"
                                     IsReadOnly="True" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
            <Border Grid.Row="7" Grid.Column="4">
                <StackPanel Orientation="Vertical"
                            HorizontalAlignment="Center"
