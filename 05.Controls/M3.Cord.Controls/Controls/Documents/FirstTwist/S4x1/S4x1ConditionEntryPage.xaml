<UserControl x:Class="M3.Cord.Controls.Documents.S4x1ConditionEntryPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="1000"
             d:DesignWidth="1000">
    <UserControl.Resources>
        <!--  LOCAL STYLES  -->
        <Style TargetType="Border">
            <Setter Property="Padding" Value="5" />
            <Setter Property="BorderBrush" Value="DimGray" />
            <Setter Property="BorderThickness" Value="0.5" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>
        <Style TargetType="TextBox" BasedOn="{StaticResource CommonTextBox}">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>
        <Style TargetType="CheckBox" BasedOn="{StaticResource CommonCheckBox}">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>
    </UserControl.Resources>
    <ScrollViewer>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <!--#region COLUMN HEADERS-->
            <Border Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Background="Silver">
                <!--  CHECKING ITEM (MERGE COLUMN)  -->
                <TextBlock Text="S - 4 - 1" />
            </Border>
            <Border Grid.Row="1"
                    Grid.Column="0"
                    Background="Silver">
                <!--  NO  -->
                <TextBlock Text="No." />
            </Border>
            <Border Grid.Row="1"
                    Grid.Column="1"
                    Background="Silver">
                <!--  MC Setting  -->
                <TextBlock Text="" />
            </Border>
            <Border Grid.Row="0"
                    Grid.Column="2"
                    Grid.RowSpan="2"
                    Background="Silver">
                <!--  Class  -->
                <TextBlock Text="Class" RenderTransformOrigin="0.5,0.5">
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <RotateTransform Angle="90" />
                        </TransformGroup>
                    </TextBlock.RenderTransform>
                </TextBlock>
            </Border>
            <Border Grid.Row="0"
                    Grid.Column="3"
                    Grid.ColumnSpan="2"
                    Background="Silver">
                <!--  Class  -->
                <TextBlock Text="Condition  ( สภาวะที่ใช้ )" />
            </Border>
            <Border Grid.Row="1"
                    Grid.Column="3"
                    Background="Silver">
                <!--  Class  -->
                <TextBlock Text="Standard (มาตรฐานที่ใช้)" />
            </Border>
            <Border Grid.Row="1"
                    Grid.Column="4"
                    Background="Silver">
                <!--  Class  -->
                <TextBlock Text="Actual (ค่าที่ใช้จริง)" />
            </Border>

            <!--#endregion-->

            <!--#region NO 1-->
            <!--  BINDING BACKGROUND ROW WHEN SC IS CHECKED  -->
            <Border Grid.Row="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="5">
                <Border.Style>
                    <Style TargetType="{x:Type Border}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding TwistChangeGearSC}" Value="True">
                                <Setter Property="Background" Value="LightYellow" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>

            <Border Grid.Row="2" Grid.Column="0">
                <TextBlock Text="1" HorizontalAlignment="Center" />
            </Border>
            <Border Grid.Row="2" Grid.Column="1">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock Width="350">
                        <Run Text="Twist change gear" />
                        <LineBreak />
                        <Run Text="( การเปลี่ยนเกียร์ )" />
                    </TextBlock>

                    <TextBlock>
                        <Run Text="E x F" />
                        <LineBreak />
                        <Run Text="G x H" />
                    </TextBlock>
                </StackPanel>
            </Border>
            <Border Grid.Row="2" Grid.Column="2">
                <!--<CheckBox Content="" IsChecked="{Binding TwistChangeGearSC}" />-->
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="{x:Type TextBlock}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding TwistChangeGearSC}" Value="True">
                                    <Setter Property="Text" Value="SC" />
                                    <Setter Property="FontWeight" Value="DemiBold" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Border>
            <Border Grid.Row="2" Grid.Column="3">
                <StackPanel Orientation="Vertical"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <StackPanel Orientation="Vertical">
                            <TextBox Width="70"
                                     Text="{Binding TwistChangeGearE, StringFormat='{}{0:#,##0.##}'}"
                                     IsReadOnly="True" />
                        </StackPanel>
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text=" x " />
                        </StackPanel>
                        <StackPanel Orientation="Vertical">
                            <TextBox Width="70"
                                     Text="{Binding TwistChangeGearF, StringFormat='{}{0:#,##0.##}'}"
                                     IsReadOnly="True" />
                        </StackPanel>
                    </StackPanel>
                    <TextBlock Height="5" />
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <StackPanel Orientation="Vertical">
                            <TextBox Width="70"
                                     Text="{Binding TwistChangeGearG, StringFormat='{}{0:#,##0.##}'}"
                                     IsReadOnly="True" />
                        </StackPanel>
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text=" x " />
                        </StackPanel>
                        <StackPanel Orientation="Vertical">
                            <TextBox Width="70"
                                     Text="{Binding TwistChangeGearH, StringFormat='{}{0:#,##0.##}'}"
                                     IsReadOnly="True" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Grid.Row="2" Grid.Column="4">
                <StackPanel Orientation="Vertical"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <StackPanel Orientation="Vertical">
                            <TextBox Width="70" Text="{Binding TwistChangeGearEActual, StringFormat='{}{0:#,##0.##}'}" />
                        </StackPanel>
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text=" x " />
                        </StackPanel>
                        <StackPanel Orientation="Vertical">
                            <TextBox Width="70" Text="{Binding TwistChangeGearFActual, StringFormat='{}{0:#,##0.##}'}" />
                        </StackPanel>
                    </StackPanel>
                    <TextBlock Height="5" />
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <StackPanel Orientation="Vertical">
                            <TextBox Width="70" Text="{Binding TwistChangeGearGActual, StringFormat='{}{0:#,##0.##}'}" />
                        </StackPanel>
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text=" x " />
                        </StackPanel>
                        <StackPanel Orientation="Vertical">
                            <TextBox Width="70" Text="{Binding TwistChangeGearHActual, StringFormat='{}{0:#,##0.##}'}" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!--#endregion-->

            <!--#region NO 2-->
            <!--  BINDING BACKGROUND ROW WHEN SC IS CHECKED  -->
            <Border Grid.Row="3"
                    Grid.Column="0"
                    Grid.ColumnSpan="5">
                <Border.Style>
                    <Style TargetType="{x:Type Border}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding MotorPulleyDiaSC}" Value="True">
                                <Setter Property="Background" Value="LightYellow" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>

            <Border Grid.Row="3" Grid.Column="0">
                <TextBlock Text="2" HorizontalAlignment="Center" />
            </Border>
            <Border Grid.Row="3" Grid.Column="1">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock FontSize="18" Width="350">
                        <Run Text="Motor pulley dia (เส้นผ่าศูนย์กลางมอเตอร์พูเล่)" />
                        <LineBreak />
                        <Run Text="Driving pulley dia (เส้นผ่าศูนย์กลางไดรฟ์วิ่งพูเล่)" />
                    </TextBlock>
                    <TextBlock>
                        <Run Text="mm (มม.)" />
                        <LineBreak />
                        <Run Text="mm (มม.)" />
                    </TextBlock>
                </StackPanel>
            </Border>
            <Border Grid.Row="3" Grid.Column="2">
                <!--<CheckBox Content="" IsChecked="{Binding MotorPulleyDiaSC}" />-->
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="{x:Type TextBlock}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding MotorPulleyDiaSC}" Value="True">
                                    <Setter Property="Text" Value="SC" />
                                    <Setter Property="FontWeight" Value="DemiBold" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Border>
            <Border Grid.Row="3" Grid.Column="3">
                <StackPanel Orientation="Vertical"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBox Width="200"
                             Text="{Binding MotorPulleyDia, StringFormat='{}{0:#,##0.##}'}"
                             IsReadOnly="True" />
                    <TextBlock Height="5" />
                    <TextBox Width="200"
                             Text="{Binding DrivingPulleyDia, StringFormat='{}{0:#,##0.##}'}"
                             IsReadOnly="True" />
                </StackPanel>

            </Border>
            <Border Grid.Row="3" Grid.Column="4">
                <StackPanel Orientation="Vertical"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBox Width="200" Text="{Binding MotorPulleyDiaActual, StringFormat='{}{0:#,##0.##}'}" />
                    <TextBlock Height="5" />
                    <TextBox Width="200" Text="{Binding DrivingPulleyDiaActual, StringFormat='{}{0:#,##0.##}'}" />
                </StackPanel>
            </Border>

            <!--#endregion-->

            <!--#region NO 3-->
            <!--  BINDING BACKGROUND ROW WHEN SC IS CHECKED  -->
            <Border Grid.Row="4"
                    Grid.Column="0"
                    Grid.ColumnSpan="5">
                <Border.Style>
                    <Style TargetType="{x:Type Border}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding OverFeedSC}" Value="True">
                                <Setter Property="Background" Value="LightYellow" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>

            <Border Grid.Row="4" Grid.Column="0">
                <TextBlock Text="3" HorizontalAlignment="Center" />
            </Border>
            <Border Grid.Row="4" Grid.Column="1">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock FontSize="18" Width="350">
                        <Run Text="Over feed" />
                        <LineBreak />
                        <Run Text="(โอเวอร์ฟิด)" />
                    </TextBlock>
                    <TextBlock>
                        <Run Text="rate อัตรา ( % )" />
                        <LineBreak />
                        <Run Text="gear (เกียร์)" />
                    </TextBlock>
                </StackPanel>
            </Border>
            <Border Grid.Row="4" Grid.Column="2">
                <!--<CheckBox Content="" IsChecked="{Binding OverFeedSC}" />-->
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="{x:Type TextBlock}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding OverFeedSC}" Value="True">
                                    <Setter Property="Text" Value="SC" />
                                    <Setter Property="FontWeight" Value="DemiBold" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Border>
            <Border Grid.Row="4" Grid.Column="3">
                <StackPanel Orientation="Vertical"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBox Width="200"
                             Text="{Binding OverFeedRate, StringFormat='{}{0:#,##0.##}'}"
                             IsReadOnly="True" />
                    <TextBlock Height="5" />
                    <TextBox Width="200"
                             Text="{Binding OverFeedGear, StringFormat='{}{0:#,##0.##}'}"
                             IsReadOnly="True" />
                </StackPanel>
            </Border>
            <Border Grid.Row="4" Grid.Column="4">
                <StackPanel Orientation="Vertical"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBox Width="200" Text="{Binding OverFeedRateActual, StringFormat='{}{0:#,##0.##}'}" />
                    <TextBlock Height="5" />
                    <TextBox Width="200" Text="{Binding OverFeedGearActual, StringFormat='{}{0:#,##0.##}'}" />
                </StackPanel>
            </Border>

            <!--#endregion-->

            <!--#region NO 4-->
            <!--  BINDING BACKGROUND ROW WHEN SC IS CHECKED  -->
            <Border Grid.Row="5"
                    Grid.Column="0"
                    Grid.ColumnSpan="5">
                <Border.Style>
                    <Style TargetType="{x:Type Border}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding WindAngleSC}" Value="True">
                                <Setter Property="Background" Value="LightYellow" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>

            <Border Grid.Row="5" Grid.Column="0">
                <TextBlock Text="4" HorizontalAlignment="Center" />
            </Border>
            <Border Grid.Row="5" Grid.Column="1">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock FontSize="18" Width="250">
                        <Run Text="Wind Angle" />
                        <LineBreak />
                        <Run Text="(มุมในการกรอ)" />
                    </TextBlock>
                    <TextBlock Width="100">
                        <Run Text="Angle (มุม)" />
                        <LineBreak />
                        <Run Text="Gear (เฟือง)" />
                    </TextBlock>
                    <TextBlock>
                        <Run Text="deg (องศา)" />
                        <LineBreak />
                        <Run Text="A x B" />
                    </TextBlock>
                </StackPanel>
            </Border>
            <Border Grid.Row="5" Grid.Column="2">
                <!--<CheckBox Content="" IsChecked="{Binding WindAngleSC}" />-->
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="{x:Type TextBlock}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding WindAngleSC}" Value="True">
                                    <Setter Property="Text" Value="SC" />
                                    <Setter Property="FontWeight" Value="DemiBold" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Border>
            <Border Grid.Row="5" Grid.Column="3">
                <StackPanel Orientation="Vertical"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBox Width="200"
                             Text="{Binding WindAngleDeg, StringFormat='{}{0:#,##0.##}'}"
                             IsReadOnly="True" />
                    <TextBlock Height="5" />
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <StackPanel Orientation="Vertical">
                            <TextBox Width="70"
                                     Text="{Binding WindAngleGearA, StringFormat='{}{0:#,##0.##}'}"
                                     IsReadOnly="True" />
                        </StackPanel>
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text=" x " />
                        </StackPanel>
                        <StackPanel Orientation="Vertical">
                            <TextBox Width="70"
                                     Text="{Binding WindAngleGearB, StringFormat='{}{0:#,##0.##}'}"
                                     IsReadOnly="True" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
            <Border Grid.Row="5" Grid.Column="4">
                <StackPanel Orientation="Vertical"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBox Width="200" Text="{Binding WindAngleDegActual, StringFormat='{}{0:#,##0.##}'}" />
                    <TextBlock Height="5" />
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <StackPanel Orientation="Vertical">
                            <TextBox Width="70" Text="{Binding WindAngleGearAActual, StringFormat='{}{0:#,##0.##}'}" />
                        </StackPanel>
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text=" x " />
                        </StackPanel>
                        <StackPanel Orientation="Vertical">
                            <TextBox Width="70" Text="{Binding WindAngleGearBActual, StringFormat='{}{0:#,##0.##}'}" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!--#endregion-->

            <!--#region NO 5-->
            <!--  BINDING BACKGROUND ROW WHEN SC IS CHECKED  -->
            <Border Grid.Row="6"
                    Grid.Column="0"
                    Grid.ColumnSpan="5">
                <Border.Style>
                    <Style TargetType="{x:Type Border}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding TensorDialSetSC}" Value="True">
                                <Setter Property="Background" Value="LightYellow" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>

            <Border Grid.Row="6" Grid.Column="0">
                <TextBlock Text="5" HorizontalAlignment="Center" />
            </Border>
            <Border Grid.Row="6" Grid.Column="1">
                <TextBlock HorizontalAlignment="Left">
                    <Run Text="Tensor Dial set (หน้าปัดตั้งความตึง)" />
                    <LineBreak />
                    <Run Text="Number of loop (จำนวนลูป)" />
                </TextBlock>
            </Border>
            <Border Grid.Row="6" Grid.Column="2">
                <!--<CheckBox Content="" IsChecked="{Binding TensorDialSetSC}" />-->
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="{x:Type TextBlock}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding TensorDialSetSC}" Value="True">
                                    <Setter Property="Text" Value="SC" />
                                    <Setter Property="FontWeight" Value="DemiBold" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Border>
            <Border Grid.Row="6" Grid.Column="3">
                <StackPanel Orientation="Vertical"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBox Width="200"
                             Text="{Binding TensorDialSet, StringFormat='{}{0:#,##0.##}'}"
                             IsReadOnly="True" />
                    <TextBlock Height="5" />
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <StackPanel Orientation="Vertical">
                            <TextBox Width="70"
                                     Text="{Binding NumberOfLoop, StringFormat='{}{0:#,##0.##}'}"
                                     IsReadOnly="True" />
                        </StackPanel>
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text=" ± " />
                        </StackPanel>
                        <StackPanel Orientation="Vertical">
                            <TextBox Width="70"
                                     Text="{Binding NumberOfLoopErr, StringFormat='{}{0:#,##0.##}'}"
                                     IsReadOnly="True" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
            <Border Grid.Row="6" Grid.Column="4">
                <StackPanel Orientation="Vertical"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBox Width="200" Text="{Binding TensorDialSetActual, StringFormat='{}{0:#,##0.##}'}" />
                    <TextBlock Height="5" />
                    <TextBox Width="200" Text="{Binding NumberOfLoopActual, StringFormat='{}{0:#,##0.##}'}" />
                </StackPanel>
            </Border>

            <!--#endregion-->

            <!--#region NO 6-->
            <!--  BINDING BACKGROUND ROW WHEN SC IS CHECKED  -->
            <Border Grid.Row="7"
                    Grid.Column="0"
                    Grid.ColumnSpan="5">
                <Border.Style>
                    <Style TargetType="{x:Type Border}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding MethodOfKnotSC}" Value="True">
                                <Setter Property="Background" Value="LightYellow" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>

            <Border Grid.Row="7" Grid.Column="0">
                <TextBlock Text="6" HorizontalAlignment="Center" />
            </Border>
            <Border Grid.Row="7" Grid.Column="1">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock Width="350">
                        <Run Text="Method of knot (วิธีในการต่อด้าย)" />
                        <LineBreak />
                        <Run Text="Wind quantity (ปริมาณที่กรอ)" />
                    </TextBlock>
                    <TextBlock>
                        <Run Text="" />
                        <LineBreak />
                        <Run Text="Kg. (กก.)" />
                    </TextBlock>
                </StackPanel>

            </Border>
            <Border Grid.Row="7" Grid.Column="2">
                <!--<CheckBox Content="" IsChecked="{Binding MethodOfKnotSC}" />-->
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="{x:Type TextBlock}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding MethodOfKnotSC}" Value="True">
                                    <Setter Property="Text" Value="SC" />
                                    <Setter Property="FontWeight" Value="DemiBold" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Border>
            <Border Grid.Row="7" Grid.Column="3">
                <StackPanel Orientation="Vertical"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBox Width="200"
                             Text="{Binding MethodOfKnot}"
                             IsReadOnly="True" />
                    <TextBlock Height="5" />
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <StackPanel Orientation="Vertical">
                            <TextBox Width="70"
