                    <TextBox Width="200" Text="{Binding MethodOfKnotActual}" />
                    <TextBlock Height="5" />
                    <TextBox Width="200" Text="{Binding WindQuantityActual, StringFormat='{}{0:#,##0.##}'}" />
                </StackPanel>
