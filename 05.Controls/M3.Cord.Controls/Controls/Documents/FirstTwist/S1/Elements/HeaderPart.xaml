<UserControl x:Class="M3.Cord.Controls.Documents.FirstTwist.S1.Elements.HeaderPart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ctrl="clr-namespace:NLib.Wpf.Controls;assembly=NLib.Wpf.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="350"
             d:DesignWidth="1000">
    <DockPanel LastChildFill="True" Margin="5">
        <!--  HEADER: Production condition sheet (ใบสภาวะการผลิต)  -->
        <DockPanel DockPanel.Dock="Top"
                   LastChildFill="True"
                   Margin="5">
            <!--  LOT  -->
            <ctrl:NTextBox x:Name="txtLotNo"
                           DockPanel.Dock="Left"
                           CaptionText="Lot"
                           Width="200" />
            <!--  DATE  -->
            <ctrl:NDatePicker x:Name="dtDocDate"
                              DockPanel.Dock="Left"
                              CaptionText="Date"
                              Width="200" />
            <!--  ISSUE BY  -->
            <ctrl:NTextBox x:Name="txtIssueBy"
                           DockPanel.Dock="Left"
                           CaptionText="Issue By"
                           Width="220" />
            <!--  APPROVE BY  -->
            <ctrl:NTextBox x:Name="txtApproveBy"
                           DockPanel.Dock="Left"
                           CaptionText="Approve By"
                           Width="220" />
            <Grid />
        </DockPanel>
        <DockPanel DockPanel.Dock="Top"
                   LastChildFill="True"
                   Margin="5">
            <!--  Manufacturing conditions no. (เบอร์สภาวะการผลิต)  -->
            <DockPanel DockPanel.Dock="Top" LastChildFill="True">
                <DockPanel LastChildFill="True">
                    <!--  Destination (Customer)  -->
                    <ctrl:NTextBox x:Name="txtCustomerName"
                                   DockPanel.Dock="Left"
                                   CaptionText="Destination&#x0a;(ลูกค้า)"
                                   Width="250" />
                    <!--  Use (Product)  -->
                    <ctrl:NTextBox x:Name="txtProductName"
                                   DockPanel.Dock="Left"
                                   CaptionText="Use&#x0a;(ผลิตภัณฑ์)"
                                   Width="250" />
                    <Grid />
                </DockPanel>
            </DockPanel>
            <!--  โครงสร้างเชือก  -->
            <DockPanel DockPanel.Dock="Top" LastChildFill="True">
                <DockPanel LastChildFill="True">
                    <DockPanel DockPanel.Dock="Top" LastChildFill="True">
                        <!--  Yarn, (SC)  -->
                        <ctrl:NTextBox x:Name="txtItemYarn"
                                       DockPanel.Dock="Left"
                                       CaptionText="&#x0a;Yarn (ด้าย), (SC)"
                                       Width="250" />
                        <!--  Cord structure  -->
                        <ctrl:NTextBox x:Name="txtCordStructure"
                                       DockPanel.Dock="Left"
                                       CaptionText="Cord structure&#x0a;(โครงสร้างเชือก)"
                                       Width="250" />
                        <!--  Standard twisting number  -->
                        <ctrl:NTextBox x:Name="txtStdTwist"
                                       DockPanel.Dock="Left"
                                       CaptionText="Standard Twisting Number&#x0a;(จำนวนเกลียวมาตรฐาน), (SC)"
                                       Width="350" />
                        <Grid />
                    </DockPanel>
                </DockPanel>
            </DockPanel>
            <!--  Processing route (ลำดับของกระบวนการ)  -->
            <DockPanel DockPanel.Dock="Top"
                       LastChildFill="True"
                       Margin="5,2">
                <TextBlock DockPanel.Dock="Left"
                           FontSize="{StaticResource FontSize24}"
                           FontWeight="DemiBold"
                           VerticalAlignment="Center"
                           Style="{StaticResource LabelText}">
                    <Run Text="Processing route (ลำดับของกระบวนการ) : " />
                    <Run Text="S-1" />
                    <Run Text="&#x2794;" />
                    <Run Text="S-13" />
                    <Run Text="&#x2794;" />
                    <Run Text="S-8" />
                    <Run Text="&#x2794;" />
                    <Run Text="S-24" />
                </TextBlock>
                <Grid />
            </DockPanel>
            <Grid />
        </DockPanel>
    </DockPanel>
</UserControl>
