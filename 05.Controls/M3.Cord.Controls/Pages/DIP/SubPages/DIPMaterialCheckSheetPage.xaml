<UserControl x:Class="M3.Cord.Pages.DIPMaterialCheckSheetPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ctrl="clr-namespace:NLib.Wpf.Controls;assembly=NLib.Wpf.Controls"
             xmlns:doc="clr-namespace:M3.Cord.Controls.Documents"
             xmlns:elem="clr-namespace:M3.Cord.Controls.Elements"
             xmlns:page="clr-namespace:NLib.Wpf.Pages;assembly=NLib.Wpf.Controls"
             xmlns:spage="clr-namespace:M3.Cord.Pages"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             x:Name="root"
             mc:Ignorable="d"
             d:DesignHeight="800"
             d:DesignWidth="1200">
    <page:NPage x:Name="page" HeaderText="ตรวจสอบเส้นด้ายก่อนนำเข้า S-7">
        <DockPanel LastChildFill="True">
            <!--  BUTTONS  -->
            <DockPanel LastChildFill="True"
                       DockPanel.Dock="Bottom"
                       Height="40">
                <StackPanel Orientation="Horizontal"
                            DockPanel.Dock="Right"
                            VerticalAlignment="Center">
                    <!--  HOME  -->
                    <ctrl:FontAwesomeButton x:Name="cmdBack"
                                            Margin="5,0,0,0"
                                            IconType="Back"
                                            Text="Back"
                                            Click="cmdBack_Click" />
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            DockPanel.Dock="Left"
                            VerticalAlignment="Center">
                    <ctrl:FontAwesomeButton x:Name="cmdSave"
                                            Margin="5,0,0,0"
                                            IconType="Add"
                                            Text="Save"
                                            Click="cmdSave_Click" />
                </StackPanel>
                <Grid />
            </DockPanel>
            <!--  PC Card  -->
            <DockPanel x:Name="paCondition"
                       LastChildFill="True"
                       DockPanel.Dock="Top"
                       Margin="2">
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                        <elem:ProductCodeBox />
                        <elem:DIPLotNoBox />
                    </StackPanel>
                </StackPanel>
                <Grid />
            </DockPanel>
            <DockPanel x:Name="paSheetInfo"
                       LastChildFill="True"
                       DockPanel.Dock="Top"
                       Margin="2">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
                    <ctrl:NDatePicker CaptionText="Date:"
                                      x:Name="dtCheckDate"
                                      SelectedDate="{Binding CheckDate}" />
                    <ctrl:NTextBox CaptionText="Doff No:"
                                   x:Name="txtDoffNo"
                                   Text="{Binding DoffNo}" />
                    <ctrl:NComboBox CaptionText="S-7 MC:"
                                    x:Name="cbS7MC"
                                    DisplayMemberPath="MCCode"
                                    SelectedValuePath="MCCode"/>
                </StackPanel>
                <Grid />
            </DockPanel>
            <!--  SCAN PANEL  -->
            <DockPanel LastChildFill="True"
                       DockPanel.Dock="Top"
                       Margin="2">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
                    <ctrl:NTextBox CaptionText="SP No:"
                                   x:Name="txtSPNo"
                                   PreviewKeyDown="txtSPNo_PreviewKeyDown" />
                    <ctrl:NTextBox CaptionText="Lot No:"
                                   x:Name="txtLotNo"
                                   PreviewKeyDown="txtLotNo_PreviewKeyDown" />
                    <ctrl:NTextBox CaptionText="CH No:"
                                   x:Name="txtCHNo"
                                   PreviewKeyDown="txtCHNo_PreviewKeyDown" />
                    <TextBlock Width="10" />
                    <Button x:Name="cmdAdd"
                            VerticalAlignment="Bottom"
                            Style="{StaticResource InlineButton}"
                            Content="Update"
                            Click="cmdAdd_Click" />
                </StackPanel>
                <TextBlock Height="3" />
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <CheckBox x:Name="chkCheckYarnNo"
                              FontSize="20"
                              Content="เบอร์ด้าน/สภาพด้าย"
                              Style="{StaticResource CommonCheckBox}" />
                    <CheckBox x:Name="chkCheckYanScrap"
                              FontSize="20"
                              Content="ไม่มีเศษด้าย"
                              Style="{StaticResource CommonCheckBox}" />
                    <CheckBox x:Name="chkCheckYarnBall"
                              FontSize="20"
                              Content="ลูกด้าย"
                              Style="{StaticResource CommonCheckBox}" />
                    <CheckBox x:Name="chkCheckCover"
                              FontSize="20"
                              Content="ผ้าคลุม"
                              Style="{StaticResource CommonCheckBox}" />
                    <CheckBox x:Name="chkCheckSensor"
                              FontSize="20"
                              Content="Sensor"
                              Style="{StaticResource CommonCheckBox}" />
                    <CheckBox x:Name="chkCheckDustFilter"
                              FontSize="20"
                              Content="ตัวดักปน"
                              Style="{StaticResource CommonCheckBox}" />
                </StackPanel>
                <Grid />
            </DockPanel>
            <!--
        <doc:S1ConditionEntryPage x:Name="s1" Visibility="Visible" />
            -->
            <Grid />
        </DockPanel>
    </page:NPage>
</UserControl>
