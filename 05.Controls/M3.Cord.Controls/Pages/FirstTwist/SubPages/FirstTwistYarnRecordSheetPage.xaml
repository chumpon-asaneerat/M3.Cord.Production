        <!--#region XXX-->

        <!--#endregion-->

        <!--#region XXX-->

        <!--#endregion-->

        <!--#region XXX-->

        <!--#endregion-->

        <!--#region XXX-->

        <!--#endregion-->
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <!--  BUTTONS  -->
        <DockPanel LastChildFill="True"
                   DockPanel.Dock="Bottom"
                   Height="40">
            <StackPanel Orientation="Horizontal"
                        DockPanel.Dock="Right"
                        VerticalAlignment="Center">
                <!--  HOME  -->
                <ctrl:FontAwesomeButton x:Name="cmdBack"
                                        Margin="5,0,0,0"
                                        IconType="Back"
                                        Text="Back"
                                        Click="cmdBack_Click" />
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        DockPanel.Dock="Left"
                        VerticalAlignment="Center">
                <ctrl:FontAwesomeButton x:Name="cmdNewSheet"
                                        Margin="5,0,0,0"
                                        IconType="Add"
                                        Text="New Sheet"
                                        Click="cmdNewSheet_Click" />
            </StackPanel>
            <Grid />
        </DockPanel>
        <DockPanel x:Name="paCheckSheet" LastChildFill="True">
            <DockPanel LastChildFill="True"
                       DockPanel.Dock="Top"
                       Margin="2">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <elem:FlowBox />
                    <elem:ItemYarnBox />
                    <elem:ProductLotNo />
                </StackPanel>
                <Grid />
            </DockPanel>
            <ListView x:Name="lvCheckSheet"
                      Margin="0,0,0,5"
                      FontSize="{StaticResource FontSize18}"
                      ItemContainerStyle="{StaticResource BASEListViewItemContainer}"
                      ItemsSource="{Binding}"
                      Style="{StaticResource SingleSelectListView}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Production Date" CellTemplate="{StaticResource ProductionDate}" />
                        <GridViewColumn Header="Doff" CellTemplate="{StaticResource DoffNo}" />
                        <!--
                        <GridViewColumn Header="Yarn Type" CellTemplate="{StaticResource ItemYarn}" />
                        <GridViewColumn Header="Input (CH)" CellTemplate="{StaticResource InputCH}" />
                        -->
                        <GridViewColumn Header="Shift" CellTemplate="{StaticResource ShiftName}" />
                        <GridViewColumn Header="Operator" CellTemplate="{StaticResource UserId}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </DockPanel>
    </DockPanel>
</UserControl>
