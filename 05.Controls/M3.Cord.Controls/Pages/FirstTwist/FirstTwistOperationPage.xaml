<UserControl x:Class="M3.Cord.Pages.FirstTwistOperationPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ctrl="clr-namespace:NLib.Wpf.Controls;assembly=NLib.Wpf.Controls"
             xmlns:page="clr-namespace:NLib.Wpf.Pages;assembly=NLib.Wpf.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="1200">
    <page:NPage x:Name="page" HeaderText="1st Twisting - ">
        <DockPanel LastChildFill="True" Margin="5">
            <!--  BUTTONS  -->
            <DockPanel LastChildFill="True"
                       DockPanel.Dock="Bottom"
                       Height="40">
                <StackPanel Orientation="Horizontal"
                            DockPanel.Dock="Right"
                            VerticalAlignment="Center">
                    <!--  HOME  -->
                    <ctrl:FontAwesomeButton x:Name="cmdBack"
                                            Margin="5,0,0,0"
                                            IconType="Back"
                                            Text="Back"
                                            Click="cmdBack_Click" />
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            DockPanel.Dock="Left"
                            VerticalAlignment="Center">
                    <ctrl:FontAwesomeButton x:Name="cmdSelectPCCard"
                                            Margin="5,0,0,0"
                                            IconType="Import"
                                            Text="Set PC Card"
                                            Click="cmdSelectPCCard_Click" />
                </StackPanel>
                <Grid />
            </DockPanel>
            <DockPanel x:Name="paPCCard" LastChildFill="True">
                <DockPanel LastChildFill="True" DockPanel.Dock="Top">
                    <StackPanel Orientation="Horizontal">
                        <ctrl:NTextBox CaptionText="Customer:"
                                       IsReadOnly="True"
                                       Text="{Binding CustomerName}" />
                        <ctrl:NTextBox CaptionText="Product Name:"
                                       IsReadOnly="True"
                                       Text="{Binding ProductName}" />
                        <ctrl:NTextBox CaptionText="Product Code:"
                                       IsReadOnly="True"
                                       Text="{Binding ProductCode}" />
                        <ctrl:NTextBox CaptionText="Lot No:"
                                       IsReadOnly="True"
                                       Text="{Binding ProductLotNo}" />
                        <ctrl:NTextBox CaptionText="Weight:"
                                       Width="150"
                                       IsReadOnly="True"
                                       Text="{Binding TargetQty}" />
                        <ctrl:NTextBox CaptionText="Flow:"
                                       Width="120"
                                       IsReadOnly="True"
                                       Text="{Binding MCCode}" />
                    </StackPanel>
                </DockPanel>
                <DockPanel LastChildFill="True" DockPanel.Dock="Top">
                    <ctrl:NTextBox CaptionText="Cord Structure:"
                                   IsReadOnly="True"
                                   Text="{Binding CordStructure}" />
                    <ctrl:NTextBox CaptionText="Raw Yarn:"
                                   Width="350"
                                   IsReadOnly="True"
                                   Text="{Binding ItemYarn}" />
                    <ctrl:NTextBox CaptionText="Twist spec (SC):"
                                   Width="350"
                                   IsReadOnly="True"
                                   Text="{Binding TwistSpec}" />
                    <Grid />
                </DockPanel>
                <Grid />
            </DockPanel>
        </DockPanel>
    </page:NPage>
</UserControl>
