<UserControl x:Class="M3.Cord.Pages.CordReceiveYarnPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:util="clr-namespace:M3.Cord.Controls.Utils"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Resources>
        <!--  PAGE TITLE  -->
        <sys:String x:Key="PageTitle">CORD - Receive Yarn</sys:String>
        <!--  INLINE BUTTON TEXT FONT SIZE  -->
        <sys:Double x:Key="IBFSize">18</sys:Double>
        <!--  FILTER BAR VISIBLE STATES  -->
        <Visibility x:Key="FilterBarVisible">Visible</Visibility>
        <Visibility x:Key="RefreshButtonVisible">Collapsed</Visibility>
        <Visibility x:Key="SearchButtonVisible">Collapsed</Visibility>
        <!--  BOTTONS BAR VISIBLE STATES  -->
        <Visibility x:Key="HomeButtonVisible">Visible</Visibility>
        <Visibility x:Key="SaveButtonVisible">Visible</Visibility>
        <Visibility x:Key="PrintButtonVisible">Visible</Visibility>
        <Visibility x:Key="AddNewButtonVisible">Collapsed</Visibility>
        <Visibility x:Key="DeleteAllButtonVisible">Visible</Visibility>
    </UserControl.Resources>
    <Grid Background="{StaticResource PageBG}">
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{StaticResource PageMargin}" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="{StaticResource PageMargin}" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="{StaticResource PageMargin}" />
                <RowDefinition Height="{StaticResource CaptionHeight}" />
                <RowDefinition Height="{StaticResource PageMargin}" />
                <RowDefinition Height="*" />
                <RowDefinition Height="{StaticResource PageMargin}" />
            </Grid.RowDefinitions>
            <!--  CAPTION AREA  -->
            <Border Grid.Column="1"
                    Grid.ColumnSpan="1"
                    Grid.Row="1"
                    Grid.RowSpan="1"
                    Background="{StaticResource CaptionBackground}"
                    BorderBrush="{StaticResource CaptionBorderColor}"
                    BorderThickness="{StaticResource CaptionBorderThickness}"
                    CornerRadius="{StaticResource CaptionBorderCornerRadius}">
                <TextBlock Foreground="{StaticResource CaptionForeground}"
                           FontSize="{StaticResource FontSize24}"
                           Margin="0,2"
                           TextAlignment="Center"
                           Text="{StaticResource PageTitle}" />
            </Border>
            <!--  CLIENT AREA  -->
            <DockPanel Grid.Column="1"
                       Grid.ColumnSpan="1"
                       Grid.Row="3"
                       Grid.RowSpan="1"
                       LastChildFill="True">
                <!--  WORK AREA  -->
                <DockPanel LastChildFill="True">
                    <!--  BUTTONS BAR  -->
                    <DockPanel LastChildFill="True"
                               DockPanel.Dock="Bottom"
                               Height="40">
                        <!--  Add New  -->
                        <Button x:Name="cmdAddNew"
                                Visibility="{StaticResource AddNewButtonVisible}"
                                DockPanel.Dock="Left"
                                Style="{StaticResource InlineButton}"
                                Margin="5,0"
                                Width="150"
                                Height="30">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource fa-addnew}" FontSize="{StaticResource IBFSize}" />
                                <TextBlock Margin="3,0"
                                           FontFamily="{StaticResource THSarabun}"
                                           FontSize="{StaticResource IBFSize}"
                                           Text="เพิ่มข้อมูล"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                        <!--  SAVE  -->
                        <Button x:Name="cmdSave"
                                Visibility="{StaticResource SaveButtonVisible}"
                                DockPanel.Dock="Left"
                                Style="{StaticResource InlineButton}"
                                Margin="5,0"
                                Width="150"
                                Height="30">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource fa-save}" FontSize="{StaticResource IBFSize}" />
                                <TextBlock Margin="3,0"
                                           FontFamily="{StaticResource THSarabun}"
                                           FontSize="{StaticResource IBFSize}"
                                           Text="Save"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                        <!--  DELETE ALL  -->
                        <Button x:Name="cmdDeleteAll"
                                Visibility="{StaticResource DeleteAllButtonVisible}"
                                DockPanel.Dock="Left"
                                Style="{StaticResource InlineButton}"
                                Margin="5,0"
                                Width="150"
                                Height="30">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource fa-remove}" FontSize="{StaticResource IBFSize}" />
                                <TextBlock Margin="3,0"
                                           FontFamily="{StaticResource THSarabun}"
                                           FontSize="{StaticResource IBFSize}"
                                           Text="Clear"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                        <!--  PRINT  -->
                        <Button x:Name="cmdPrint"
                                Visibility="{StaticResource PrintButtonVisible}"
                                DockPanel.Dock="Left"
                                Style="{StaticResource InlineButton}"
                                Margin="5,0"
                                Width="150"
                                Height="30">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource fa-print}" FontSize="{StaticResource IBFSize}" />
                                <TextBlock Margin="3,0"
                                           FontFamily="{StaticResource THSarabun}"
                                           FontSize="{StaticResource IBFSize}"
                                           VerticalAlignment="Center">
                                    <Run Text="Print" />
                                </TextBlock>
                            </StackPanel>
                        </Button>
                        <!--  BACK  -->
                        <Button x:Name="cmdHome"
                                Visibility="{StaticResource HomeButtonVisible}"
                                DockPanel.Dock="Right"
                                Style="{StaticResource InlineButton}"
                                Margin="5,0"
                                Width="150"
                                Height="30"
                                Click="cmdHome_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource fa-home}" FontSize="{StaticResource IBFSize}" />
                                <TextBlock Margin="3,0"
                                           FontFamily="{StaticResource THSarabun}"
                                           FontSize="{StaticResource IBFSize}"
                                           Text="Main Menu"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                        <Grid />
                    </DockPanel>
                    <!--  ITEMS  -->
                    <DockPanel LastChildFill="True">
                        <StackPanel Orientation="Vertical"
                                    DockPanel.Dock="Top"
                                    HorizontalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <!--  RECEIVE DATE  -->
                                <TextBlock Margin="0,5"
                                           Style="{StaticResource LabelText}"
                                           Width="100"
                                           TextAlignment="Right"
                                           Text="Receive Date: " />
                                <DatePicker x:Name="dtIssueDate"
                                            FontSize="{StaticResource FontSize14}"
                                            Margin="0,5"
                                            Width="150" />
                                <!--  ITEM YARN  -->
                                <TextBlock Margin="0,5"
                                           Style="{StaticResource LabelText}"
                                           Width="100"
                                           TextAlignment="Right"
                                           Text="Item Yarn: " />
                                <ComboBox x:Name="cbItemYarn"
                                          Margin="0,5"
                                          Style="{StaticResource CommonComboBox}"
                                          Width="200" />
                                <!--  SEARCH  -->
                                <Button x:Name="cmdSearch"
                                        Style="{StaticResource InlineButton}"
                                        Margin="5,0"
                                        Width="150"
                                        Height="30">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Style="{StaticResource fa-search}" FontSize="{StaticResource IBFSize}" />
                                        <TextBlock Margin="3,0"
                                                   FontFamily="{StaticResource THSarabun}"
                                                   FontSize="{StaticResource IBFSize}"
                                                   Text="Search"
                                                   VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    DockPanel.Dock="Bottom">
                            <!--  TOTAL PALLET  -->
                            <TextBlock Margin="5"
                                       Style="{StaticResource LabelText}"
                                       Text="TOTAL PALLET: " />
                            <TextBox x:Name="txtTotalPallet"
                                     Margin="5"
                                     Style="{StaticResource CommonTextBox}"
                                     IsReadOnly="True"
                                     Text="0"
                                     Width="100" />
                            <!--  TOTAL WEIGHT  -->
                            <TextBlock Margin="5,0"
                                       Style="{StaticResource LabelText}"
                                       Text="TOTAL WEIGHT: " />
                            <TextBox x:Name="txtTotalWeight"
                                     Margin="5"
                                     Style="{StaticResource CommonTextBox}"
                                     IsReadOnly="True"
                                     Text="0"
                                     Width="100" />
                            <!--  TOTAL CH  -->
                            <TextBlock Margin="5"
                                       Style="{StaticResource LabelText}"
                                       Text="TOTAL CH: " />
                            <TextBox x:Name="txtTotalCH"
                                     Margin="5"
                                     Style="{StaticResource CommonTextBox}"
                                     IsReadOnly="True"
                                     Text="0"
                                     Width="100" />
                        </StackPanel>
                        <ListView x:Name="grid"
                                  FontSize="{StaticResource FontSize18}"
                                  ItemContainerStyle="{StaticResource BASEListViewItemContainer}"
                                  ItemsSource="{Binding}"
                                  Style="{StaticResource SingleSelectListView}">
                            <ListView.View>
                                <GridView>
                                    <!--  IS SELECTED  -->
                                    <GridViewColumn Header="">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox Width="40"
                                                          Style="{StaticResource CommonCheckBox}"
                                                          IsChecked="{Binding IsSelected}"
                                                          Foreground="{Binding TextColor}" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <!--  RECEIVE DATE  -->
                                    <GridViewColumn Header="Receive Date">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Width="150"
                                                           Text="{Binding ReceiveDate, StringFormat={}{0:d}}"
                                                           Foreground="{Binding TextColor}"
                                                           TextAlignment="Center" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <!--  TRACE NO  -->
                                    <GridViewColumn Header="Trace No">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Width="150"
                                                           Text="{Binding TraceNo}"
                                                           Foreground="{Binding TextColor}"
                                                           TextAlignment="Center" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <!--  PALLET NO  -->
                                    <GridViewColumn Header="Pallet No">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Width="150"
                                                           Text="{Binding PalletNo}"
                                                           Foreground="{Binding TextColor}"
                                                           TextAlignment="Center" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <!--  LOT NO  -->
                                    <GridViewColumn Header="Lot No">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Width="150"
                                                           Text="{Binding LotNo}"
                                                           Foreground="{Binding TextColor}"
                                                           TextAlignment="Center" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <!--  ITEM YARN  -->
                                    <GridViewColumn Header="Yarn Type">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Width="200"
                                                           Text="{Binding ItemYarn}"
                                                           Foreground="{Binding TextColor}"
                                                           TextAlignment="Center" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <!--  WEIGHT  -->
                                    <GridViewColumn Header="Weight">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Width="80"
                                                           Text="{Binding WeightQty}"
                                                           Foreground="{Binding TextColor}"
                                                           TextAlignment="Right" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <!--  CH  -->
                                    <GridViewColumn Header="CH">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Width="80"
                                                           Text="{Binding CH}"
                                                           Foreground="{Binding TextColor}"
                                                           TextAlignment="Right" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <!--  PALLET TYPE  -->
                                    <GridViewColumn Header="Pallet Type">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Width="80"
                                                           Text="{Binding PalletType}"
                                                           Foreground="{Binding TextColor}"
                                                           TextAlignment="Right" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </DockPanel>
                </DockPanel>
            </DockPanel>
        </Grid>
    </Grid>
</UserControl>
