<Window x:Class="M3.Cord.Windows.CordProcuctPlanningWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ctrl="clr-namespace:NLib.Wpf.Controls;assembly=NLib.Wpf.Controls"
        xmlns:page="clr-namespace:NLib.Wpf.Pages;assembly=NLib.Wpf.Controls"
        mc:Ignorable="d"
        Title="G4 Receive Raw Material"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        Height="300"
        Width="850">
    <page:NPage HeaderText="Product Planning">
        <DockPanel LastChildFill="True" Margin="5">
            <!--  BUTTON BARS  -->
            <DockPanel LastChildFill="True"
                       DockPanel.Dock="Bottom"
                       Height="40">
                <ctrl:FontAwesomeButton x:Name="cmdCancel"
                                        DockPanel.Dock="Left"
                                        IconType="Cancel"
                                        Text="Cancel"
                                        Click="cmdCancel_Click" />
                <ctrl:FontAwesomeButton x:Name="cmdOk"
                                        DockPanel.Dock="Right"
                                        IconType="Ok"
                                        Text="Ok"
                                        Click="cmdOk_Click" />
                <Grid />
            </DockPanel>
            <!--  WORK AREA  -->
            <DockPanel LastChildFill="True">
                <DockPanel DockPanel.Dock="Top">
                    <!--  ITEM YARN  -->
                    <ctrl:NComboBox x:Name="cbItemYanrs"
                                    DockPanel.Dock="Left"
                                    CaptionText="Item Yarn:"
                                    DisplayMemberPath="ItemYarn"
                                    Width="250" />
                    <!--  CUSTOMER -->
                    <ctrl:NTextBox CaptionText="Customer:"
                                   DockPanel.Dock="Left"
                                   Text="{Binding CustomerName}"
                                   Width="250" />
                    <Grid />
                </DockPanel>
                <DockPanel DockPanel.Dock="Top">
                    <!--  Item Code  -->
                    <ctrl:NTextBox CaptionText="Item Code:"
                                   DockPanel.Dock="Left"
                                   Text="{Binding ItemCode}"
                                   Width="200" />
                    <!--  LOT NO  -->
                    <ctrl:NTextBox CaptionText="Lot No:"
                                   DockPanel.Dock="Left"
                                   Text="{Binding ProductLotNo}"
                                   Width="200" />
                    <!--  Color  -->
                    <ctrl:NTextBox CaptionText="Color:"
                                   DockPanel.Dock="Left"
                                   Text="{Binding Color}"
                                   Width="200" />
                    <!--  Target Weight  -->
                    <ctrl:NTextBox CaptionText="Weight:"
                                   DockPanel.Dock="Left"
                                   Text="{Binding TargetQty, StringFormat=n1}"
                                   Width="200" />
                    <Grid />
                </DockPanel>
                <Grid/>
            </DockPanel>
        </DockPanel>
    </page:NPage>
</Window>

