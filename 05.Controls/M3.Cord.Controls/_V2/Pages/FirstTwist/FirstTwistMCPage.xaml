                                        <Setter.Value>
                                            <S4x2cond:S4x2UpTwisterConditionControl />
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TabItem.Style>
                    -->
                </TabItem>
                <TabItem Header="PC Card">
                    <DockPanel LastChildFill="True" />
                </TabItem>
            </TabControl>
        </DockPanel>
    </page:NPage>
</UserControl>
