<UserControl x:Class="NLib.Wpf.Controls.NavigatorBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:conv="clr-namespace:NLib.Wpf.Controls.Converters"
             xmlns:ctrl="clr-namespace:NLib.Wpf.Controls"
             x:Name="_ThisCtrl"
             d:DesignHeight="50"
             d:DesignWidth="1200"
             mc:Ignorable="d">
    <UserControl.Resources>
        <conv:ShowButtonsConverter x:Key="ShowButtonsConverter" />
    </UserControl.Resources>
    <DockPanel LastChildFill="True" Height="Auto">
        <!--  NEW  -->
        <ctrl:InlineButton x:Name="cmdNew"
                           DockPanel.Dock="Left"
                           IconType="Add"
                           Text="New"
                           Visibility="{Binding ElementName=_ThisCtrl, Path=ShowButtons, Converter={StaticResource ShowButtonsConverter}, ConverterParameter={x:Static ctrl:FontAwesomeIcon.Add}}"
                           FontSize="{Binding ElementName=_ThisCtrl, Path=FontSize}"
                           Click="cmdNew_Click" />
        <Grid />
    </DockPanel>
</UserControl>
