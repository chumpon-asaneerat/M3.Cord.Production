<UserControl x:Class="NLib.Wpf.Test.App.Pages.TestComboboxPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:util="clr-namespace:NLib.Wpf.Controls.Utils"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Loaded="UserControl_Loaded"
             mc:Ignorable="d">
    <DockPanel LastChildFill="True">
        <StackPanel Orientation="Vertical"
                    DockPanel.Dock="Top"
                    Margin="5"
                    HorizontalAlignment="Left">
            <TextBlock Text="Avaliable Items:" />
            <ComboBox x:Name="cbItems"
                      IsEditable="True"
                      util:ComboboxAttachProperties.IsFilterOnAutocompleteEnabled="True"
                      DisplayMemberPath="Name"
                      Width="300" />
            <TextBlock Text="Select Item:" />
            <TextBlock DataContext="{Binding ElementName=cbItems, Path=SelectedItem}"
                Text="{Binding Name}" />
        </StackPanel>
        <Grid />
    </DockPanel>
</UserControl>
